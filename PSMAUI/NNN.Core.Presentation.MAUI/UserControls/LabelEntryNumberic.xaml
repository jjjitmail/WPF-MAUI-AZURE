<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Graphics="clr-namespace:NNN.Core.Presentation.MAUI.Graphics"
             x:Class="NNN.Core.Presentation.MAUI.UserControls.LabelEntryNumberic"
             xmlns:model="clr-namespace:NNN.Core.Presentation.MAUI.Models"
             xmlns:controls="clr-namespace:NNN.Core.Presentation.MAUI.UserControls"
             xmlns:converters="clr-namespace:NNN.Core.Presentation.MAUI.Converters"
             x:DataType="controls:LabelEntryNumberic"
             x:Name="thisView"
             >
    <Grid>
        <Grid.Resources>
            <Graphics:PSUnderline x:Key="PSUnderline" />
            <converters:ParameterConverter x:Key="ParameterConverter" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".50*" />
            <ColumnDefinition Width=".50*" />
        </Grid.ColumnDefinitions>
        <HorizontalStackLayout Grid.Column="0">
            <Label x:Name="title" Margin="10,0,0,0" VerticalTextAlignment="Center" />
            <Label x:Name ="errorLabel" VerticalTextAlignment="Center" FontFamily="SegMDL2" Margin="2,0,0,0" TextColor="Red"  />
        </HorizontalStackLayout>
        
        <StackLayout Grid.Column="1" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Column="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Entry x:Name="entry" Grid.Row="0" FontSize="16"  
                               ClearButtonVisibility="WhileEditing"
                               Focused="Entry_Focused" Keyboard="Numeric"
                               Unfocused="Entry_Unfocused" />
                        <!--Text="{Binding ParameterValue, Converter={StaticResource ParameterConverter } }"/>-->
                        <GraphicsView x:Name="PSUnderline" 
                              Drawable="{StaticResource PSUnderline}" Margin="2,0,0,5"
                              HeightRequest="5"  HorizontalOptions="FillAndExpand" IsVisible="true" 
                              VerticalOptions="End" Grid.Row="0" />
                        
                    </Grid>
                </StackLayout>
                <Label x:Name="UnitLbl" WidthRequest="25" Grid.Column="1" VerticalTextAlignment="Center"/>

            </Grid>
            
        </StackLayout>        
    </Grid>
</ContentView>